{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "sourceMap": true,
    "lib": ["ES2015", "ES6", "DOM"],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["react", "jest"],
    "declaration": true,
    "target": "es5",
    "outDir": "dist",
    "emitDeclarationOnly": true
  },
  "exclude": [
    "src/test-support",
    "src/**/*.test.*",
    "src/**/__mocks__"
  ],
  "include": [
    "src/"
  ]
}
